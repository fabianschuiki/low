// Verify the cap and len builtin function.
// +execute

func printf(int8* f,...) void

func exit(int32) void

func assert(int1 c) void{
	if(c==0){
		printf("Assert failed, exiting.\n")
		exit(1)
	}
}

func main() int32{

	var []int32 blub

	blub = make([]int32,77)

	var int32 j = 6

	printf("blub[%d] = %d\n",j,blub[j])
	assert(blub[j]==0)

	assert(blub[7]==0)
	assert(blub[8]==0)
	assert(blub[0]==0)
	assert(blub[1]==0)
	assert(blub[2]==0)

	printf("cap(blub) = %d\n",cap(blub))

	printf("len(blub) = %d\n",len(blub))

	return 0
}
