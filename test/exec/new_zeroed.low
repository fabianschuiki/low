// Verifies that new returns zeroed memory.

type foo: struct {
	int64 x
	int64 y
}

func main() int32{
	var int64* x1 = new(int64)
	var foo* x2 = new(foo)

	if (*x1 != 0) return 1

	var int64 i
	for (i = 0; i < sizeof #foo; ++i) {
		if ((#(int8*)x2)[i] != 0) return 2
	}

	return 0
}
