// Verify for loops.
// +execute

func printf(*int8,...) void

func main () int32 {

	var int32 i = 0

	yes := true
	no := false

	printf("for ;true; {}\n");
	for ;true; {
		printf(" %d", i)
		if (i > 10) {
			break
		}
		++i
	}

	printf("\nfor i = 0; i < 4; {}\n");
	for i = 0; i < 4; {
		printf(" %d", i)
		++i
	}

	printf("\nfor i > 0 {}\n");
	for i > 0 {
		printf(" %d", i)
		--i
	}

	printf("\nfor {}\n");
	for {
		printf(" %d", i)
		if (i > 10) {
			break
		}
		++i
	}

	return 0;
}
